<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".materialdesign.items.transitions.ViewTransitionFragment">

    <TextView
        android:id="@+id/red_box"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffff0000"
        app:layout_constraintBottom_toTopOf="@+id/blue_box"
        app:layout_constraintEnd_toStartOf="@+id/green_box"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/green_box"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="#ff00ff00"
        app:layout_constraintBottom_toTopOf="@+id/black_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/red_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/blue_box"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="#ff0000ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/red_box"
        app:layout_constraintStart_toStartOf="@+id/red_box"
        app:layout_constraintTop_toBottomOf="@+id/red_box" />

    <TextView
        android:id="@+id/black_box"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#ff000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/green_box"
        app:layout_constraintStart_toStartOf="@+id/green_box"
        app:layout_constraintTop_toBottomOf="@+id/green_box" />
</android.support.constraint.ConstraintLayout>
