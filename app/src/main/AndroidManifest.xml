<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.daybreak.androidsample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.daybreak.androidsample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.daybreak.androidsample.databinding.DataBindingActivity"
            android:label="@string/title_activity_data_binding" >
            <intent-filter>
                <action android:name="com.daybreak.androidsample.main_activity_list_item"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
